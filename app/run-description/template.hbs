{{outlet}}

<header class="description-header">
  <h1 class="description-header__title">My Run</h1>
</header>

<div class="run-description-container">
  <div class="run-description-form">
    <div class="run-info">
      <h4 class="run-info__field description-date">{{model.runDate}}</h4>
      <h4 class="run-info__field description-time">{{model.runTime}}</h4>
    </div>
    <div class="run-info">
      <p class="run-info__description">{{model.raceNote}}</p>
    </div>
    <div class="run-info">
      {{#link-to "index"}}<button class="run-info__button back fa fa-chevron-left"></button>{{/link-to}}
      {{#link-to "edit" model._id}}<button class="run-info__button update fa fa-pencil"></button>{{/link-to}}
    </div>
  </div>
</div>
